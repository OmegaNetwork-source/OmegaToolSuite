<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Ωmega Token Creator</title>
  <script src="https://cdn.jsdelivr.net/npm/ethers@6.6.2/dist/ethers.umd.min.js"></script>
  <style>
    body { font-family: Arial, sans-serif; padding: 40px; background: #fff; color: #000; }
    h1 { text-align: center; font-size: 2em; }
    .container { max-width: 500px; margin: auto; border: 2px solid #000; padding: 30px; border-radius: 10px; }
    input, button {
      width: 100%; padding: 12px; margin-top: 12px; font-size: 1em;
      border: 1px solid #ccc; border-radius: 5px;
    }
    button { background: #000; color: #fff; cursor: pointer; }
    button:hover { background: #222; }
    .status { margin-top: 15px; font-weight: bold; }
  </style>
</head>
<body>
  <h1>Create a Token on the Ωmega Network</h1>
  <div class="container">
    <input type="text" id="name" placeholder="Token Name" />
    <input type="text" id="symbol" placeholder="Token Symbol (e.g. OMG)" />
    <input type="number" id="supply" placeholder="Total Supply (whole number)" />
    <button onclick="createToken()">Deploy Token</button>
    <div class="status" id="status"></div>
  </div>

  <script>
    const TOKEN_FACTORY_ADDRESS = "0x0f45dc8b06fdb019ece304fdf6e9e515a2b49cf3";
    const TOKEN_FACTORY_ABI = [
      "function createToken(string name, string symbol, uint256 supply) public returns (address)"
    ];

    const OMEGA_RPC = "https://0x4e454228.rpc.aurora-cloud.dev";
    const OMEGA_CHAIN_ID = 1313161768;

    async function createToken() {
      const status = document.getElementById("status");
      const name = document.getElementById("name").value.trim();
      const symbol = document.getElementById("symbol").value.trim();
      const supply = document.getElementById("supply").value.trim();

      if (!window.ethereum) return alert("Please install MetaMask");
      if (!name || !symbol || !supply) return alert("Fill in all fields");

      try {
        const provider = new ethers.BrowserProvider(window.ethereum);
        const signer = await provider.getSigner();
        const network = await provider.getNetwork();

        if (network.chainId !== OMEGA_CHAIN_ID) {
          return alert("Please connect to the Ωmega Network");
        }

        const factory = new ethers.Contract(TOKEN_FACTORY_ADDRESS, TOKEN_FACTORY_ABI, signer);
        const fullSupply = ethers.parseUnits(supply, 18);

        status.innerText = "Deploying token...";
        const tx = await factory.createToken(name, symbol, fullSupply);
        const receipt = await tx.wait();

        // Extract deployed token address from logs if available
        const event = receipt.logs?.[0]?.address;
        status.innerHTML = `✅ Token deployed! Contract: <br><code>${event}</code>`;
      } catch (err) {
        console.error(err);
        status.innerText = "❌ Error: " + (err.reason || err.message);
      }
    }
  </script>
</body>
</html>
